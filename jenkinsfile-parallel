pipeline {

agent any

stages {
   stage ('scm checkout')
        { steps  
             {
        git 'https://github.com/prakashk0301/maven-project/'
        }    }   
     
   stage  ('parallel stage')
   { parallel {
     
             stage ('maven create package')
              {
                steps {
                  withMaven(jdk: 'localjava', maven: 'Localmaven') 
                  {   sh 'mvn compile'  }

           } }
           
           stage ('maven install package')
              {
                steps {
                  withMaven(jdk: 'localjava', maven: 'Localmaven') 
                  {   sh 'mvn install'  }
                      } 
           } 
     } 
    }
   }
